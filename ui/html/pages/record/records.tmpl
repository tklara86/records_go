{{ template "base" .}}

{{ define "title"}}Records{{end}}


{{ define "section"}}
<div class="albums-top-section">
  <a class="add-record" href="/admin/record/new">
    <svg class="add-icon">
      <use xlink:href="/dist/icons/sprite.svg#file"></use>
    </svg>
    Add record
  </a>
</div>
<div class="albums-container">
  <h3>Albums</h3>
  <div class="albums-table">
    <table>
      <tbody>
        <tr class="albums-table-headings">
          <th>Image</th>
          <th>Name</th>
          <th>Artist</th>
          <th>Release Date</th>
          <th>Label</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
        {{if .Records}}
          {{ range .Records}}
            <tr>
              <td>{{.Image}}</td>
              <td>{{.Title}}</td>
              <td>Penderecki</td>
              <td>{{.ReleaseDate}}</td>
              <td>ECM</td>
              <td>{{.Status}}</td>
              <td class="albums-table-action-icons">
                <div class="edit">
                  <svg class="action-icon">
                    <use xlink:href="/dist/icons/sprite.svg#edit"></use>
                  </svg>
                  Edit
                </div>
                <div class="remove">
                  <svg class="action-icon">
                    <use xlink:href="/dist/icons/sprite.svg#remove"></use>
                  </svg>
                  Remove
                </div>
              </td>
            </tr> 
          {{end}}
        {{end}}
      </tbody>
    </table>
  </div>
</div>

{{end}}

    
